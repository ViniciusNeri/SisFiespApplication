@model IEnumerable<SisFiespApplication.Models.Escola>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper" id="pagina">
    <!-- Page-header start -->
    <div class="page-header card">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <i class="icofont icofont-hat bg-c-pink"></i>
                    <div class="d-inline">
                        <h4>Escolas</h4>
                        <span>Lista das escolas</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a href="index.html">
                                <i class="icofont icofont-home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Escolas</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Lista de Escolas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page-header end -->
    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Zero config.table start -->
                <div class="card">
                    <div class="card-header">
                        <div class="card-header-right">
                            <i class="icofont icofont-spinner-alt-5"></i>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="dt-responsive table-responsive">
                            <table id="simpletable"
                                   class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr role="row"><th class="sorting_asc" tabindex="0" aria-controls="simpletable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 10px;"><button style="float:right" class="btn btn-success btn-circle bt_acao" type="button" title="Incluir Usuário" onclick="location.href='@Url.Action("Create", "Escolas")'"><i class="icofont icofont-ui-add"></i></th><th class="sorting_asc" tabindex="0" aria-controls="simpletable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 100px;">Nº UE</th><th class="sorting_asc" tabindex="0" aria-controls="simpletable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 300px;">Nome</th><th class="sorting" tabindex="0" aria-controls="simpletable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 155px;">Cidade</th><th class="sorting" tabindex="0" aria-controls="simpletable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 155px;">Bairro</th><th class="sorting" tabindex="0" aria-controls="simpletable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 206px;">Diretor(a)</th><th class="sorting" tabindex="0" aria-controls="simpletable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 200px;">Status</th></tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                    <tr role="row" class="odd">
                                        <td><button style="float:none" class="btn-warning btn-circle bt_acao" type="button" title="Editar Escola" onclick="location.href='@Url.Action("Edit", "Escolas",new { id = @item.Codigo})'"> <i class="icofont icofont-ui-edit"></i></button>                    <button onclick="deletarEscola(@item.Codigo)" style="float:none" class="btn-danger btn-circle bt_acao" type="button" title="Excluir Escola"><i class="icofont icofont-ui-close"></i></button></td>
                                        <td class="sorting_1">
                                            @Html.DisplayFor(modelItem => item.NUE)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cidade)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Bairro)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UsuarioNome)
                                        </td>                                       
                                        <td>
                                            @{ if (item.Status == 1)
                                                {
                                                    @Html.Raw("Ativo");
                                                }
                                                else
                                                {
                                                    @Html.Raw("Inativo");
                                                }
                                            }
                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page-body end -->
</div>

