@model SisFiespApplication.Models.Aluno

@{
    ViewData["Title"] = "Editar Aluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<input type="hidden" id="idAluno" value="@Model.Codigo">

<div class="page-wrapper" id="pagina">
    <!-- Page-header start -->
    <div class="page-header card">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <i class="icofont icofont-group-students bg-c-green"></i>
                    <div class="d-inline">
                        <h4>Alunos</h4>
                        <span>Editar Aluno</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a href="index.html">
                                <i class="icofont icofont-home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Alunos</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Editar Aluno</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page-header end -->
    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Zero config.table start -->
                <div class="card">
                    <div class="card-header">
                        <div class="card-header-right">
                            <i class="icofont icofont-spinner-alt-5"></i>
                        </div>
                    </div>
                    <div class="card-block">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-sm-1 mobile-inputs">
                                    <h1 class="sub-title">Cod:</h1>
                                    <input id="codigoAluno" disabled="disabled" class="form-control" value="@Model.Codigo" />
                                </div>
                                <div class="col-sm-4 ">
                                    <h1 class="sub-title">Nome:</h1>
                                    <input id="nomeAluno" class="form-control" value="@Model.Nome" />
                                </div>
                                <div class="col-sm-2 ">
                                    <h1 class="sub-title">Data Nasc:</h1>
                                    <input id="dtNascimento" class="form-control date" data-mask="99/99/9999" type="text" value="@Model.DtNascimento" />
                                </div>
                                <div class="col-sm-2 mobile-inputs ">
                                    <h1 class="sub-title">Turno:</h1>
                                    <select id="statusAluno" class="form-control form-control-primary">
                                        @if (Model.Status == 1)
                                        {
                                            <option selected="selected" value="1">Ativo</option>
                                        }
                                        else
                                        {
                                            <option value="1">Ativo</option>
                                        }
                                        @if (Model.Status == 0)
                                        {
                                            <option selected="selected" value="0">Inativo</option>
                                        }
                                        else
                                        {
                                            <option value="0">Inativo</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-2 mobile-inputs ">
                                    <h1 class="sub-title">Turno:</h1>
                                    <select id="TurnoAluno" class="form-control form-control-primary">
                                        @if (Model.Turno == 1)
                                        {
                                            <option selected="selected" value="1">Manhã</option>
                                        }
                                        else
                                        {
                                            <option value="1">Manhã</option>
                                        }
                                        @if (Model.Turno == 2)
                                        {
                                            <option selected="selected" value="2">Tarde</option>
                                        }
                                        else
                                        {
                                            <option value="2">Tarde</option>
                                        }
                                        @if (Model.Turno == 3)
                                        {
                                            <option selected="selected" value="3">Noite</option>
                                        }
                                        else
                                        {
                                            <option value="3">Noite</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 ">
                                    <h1 class="sub-title"></h1>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 ">
                                    <h1 class="sub-title">Nome Mãe:</h1>
                                    <input id="NomeMae" class="form-control" type="text" value="@Model.NomeMae" />
                                </div>
                                <div class="col-sm-4 ">
                                    <h1 class="sub-title">Nome Pai:</h1>
                                    <input id="NomePai" class="form-control" type="text" value="@Model.NomePai" />
                                </div>
                                <div class="col-sm-3">
                                    <h1 class="sub-title">Escola:</h1>
                                    <select id="codigoEscola" class="form-control form-control-primary">
                                        <option value="">  </option>
                                        @if (ViewData["Escolas"] as IEnumerable<Escola> != null)
                                        {
                                            foreach (var escola in ViewData["Escolas"] as IEnumerable<Escola>)
                                            {
                                                if (escola.Codigo == Model.EscolaCodigo)
                                                {
                                                    <option selected="selected" value="@escola.Codigo">@escola.Nome</option>
                                                }
                                                else
                                                {
                                                    <option value="@escola.Codigo">@escola.Nome</option>
                                                }
                                            }
                                        }

                                    </select>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-12 ">
                                    <h1 class="sub-title"></h1>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h1 class="sub-title">Apoio Escolar:</h1>
                                    <select id="apoioEscolarAluno" class="form-control form-control-primary">
                                        <option value="">  </option>
                                        @if (ViewData["ApoioEscolar"] as IEnumerable<ApoioEscolar> != null)
                                        {
                                            foreach (var apoioEscolar in ViewData["ApoioEscolar"] as IEnumerable<ApoioEscolar>)
                                            {
                                                if (apoioEscolar.Codigo == Model.ApoioEscolarCodigo)
                                                {
                                                    <option selected="selected" value="@apoioEscolar.Codigo">@apoioEscolar.Nome</option>
                                                }
                                                else
                                                {
                                                    <option value="@apoioEscolar.Codigo">@apoioEscolar.Nome</option>
                                                }
                                            }
                                        }

                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <h1 class="sub-title">Modalidade/Fase:</h1>
                                    <select id="modalidadeAluno" class="form-control form-control-primary">
                                        <option value="">  </option>
                                        @if (ViewData["Modalidades"] as IEnumerable<Modalidade> != null)
                                        {
                                            foreach (var modalidade in ViewData["Modalidades"] as IEnumerable<Modalidade>)
                                            {
                                                if (modalidade.Codigo == Model.ModalidadeCodigo)
                                                {
                                                    <option selected="selected" value="@modalidade.Codigo">@modalidade.Nome</option>
                                                }
                                                else
                                                {
                                                    <option value="@modalidade.Codigo">@modalidade.Nome</option>
                                                }
                                            }
                                        }

                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <h1 class="sub-title">Diagnostico:</h1>
                                    <select id="diagnosticoAluno" class="form-control form-control-primary">
                                        <option value="">  </option>
                                        @if (ViewData["Diagnosticos"] as IEnumerable<Diagnostico> != null)
                                        {
                                            foreach (var diagnostico in ViewData["Diagnosticos"] as IEnumerable<Diagnostico>)
                                            {
                                                if (diagnostico.Codigo == Model.DiagnosticoCodigo)
                                                {
                                                    <option selected="selected" value="@diagnostico.Codigo">@diagnostico.Nome</option>
                                                }
                                                else
                                                {
                                                    <option value="@diagnostico.Codigo">@diagnostico.Nome</option>
                                                }
                                            }
                                        }

                                    </select>
                                </div>
                                <div class="col-sm-1">
                                    <h1 class="sub-title">Map:</h1>
                                    @if (Model.Mapeado == 1)
                                    {
                                        <input id="mapeadoAluno" checked="checked" class="form-control" type="checkbox" />
                                    }
                                    else
                                    {
                                        <input id="mapeadoAluno" class="form-control" type="checkbox" />
                                    }
                                </div>
                                <div class="col-sm-2">
                                    <h1 class="sub-title">Sexo:</h1>
                                    <select id="sexoAluno" class="form-control form-control-primary">
                                        @if (Model.Sexo == "M")
                                        {
                                            <option selected="selected" value="M">Masculino</option>
                                        }
                                        else
                                        {
                                            <option value="M">Masculino</option>
                                        }
                                        @if (Model.Sexo == "F")
                                        {
                                            <option selected="selected" value="F">Feminino</option>
                                        }
                                        else
                                        {
                                            <option value="F">Feminino</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 ">
                                    <h1 class="sub-title"></h1>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 ">
                                    <h1 class="sub-title">Observações do aluno:</h1>
                                    <textarea rows="10" cols="5" id="observacaoAluno" maxlength="8000" class="form-control">@Html.Raw(@Model.Observacao)</textarea>

                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-12 ">
                                    <h1 class="sub-title"></h1>
                                </div>
                            </div>
                            <div class="form-group">
                                <input style="float:right;margin-right:10px" type="button" id="btCancelarAluno" value="Cancelar" onclick="location.href='@Url.Action("Index", "Alunos")'" class="btn btn-danger" />
                                <input style="float:right;margin-right:10px" type="button" onclick="salvarAlunoEdit()" value="Salvar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>